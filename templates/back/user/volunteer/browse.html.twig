{% extends 'base.html.twig' %}

{% block title %}Bénévoles{% endblock %}

{% block volunteer %}active{% endblock %}

{% block body %}

<h1>Liste des bénévoles</h1>

<p><a href="{{ path('volunteer_add') }}" class="btn btn-success">Ajouter un bénévoles</a></p>

<table class="table table-striped">
    {# En-têtes #}
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>

    {# Volunteer #}
    {% for volunteer in volunteers %}
    <tr>
      <th scope="row">{{ volunteer.id }}</th>
      <td>{{ volunteer.lastname }}</td>
      <td>{{ volunteer.firstname }}</td>
      <td><form action="{{ path('volunteer_delete', {id: volunteer.id}) }}" onsubmit="return confirm('Supprimer l\'utilisateur {{ volunteer.lastname|e('js') }} {{ volunteer.firstname|e('js') }} ?')" method="POST">
        {# Fake HTTP Method, see https://symfony.com/doc/current/routing.html#matching-http-methods #}
        <input type="hidden" name="_method" value="DELETE"/>
        {# CSRF Token manuel see https://symfony.com/doc/current/security/csrf.html#generating-and-checking-csrf-tokens-manually #}
        <input type="hidden" name="token" value="{{ csrf_token('delete-volunteer') }}"/>
        <a class="btn btn-sm btn-secondary" href="{{ path('volunteer_read', {id: volunteer.id}) }}">Voir</a>
        <a class="btn btn-sm btn-primary" href="{{ path('volunteer_edit', {id: volunteer.id}) }}">Modifier</a>
        <button class="btn btn-sm btn-danger" type="submit">Supprimer</button>
      </form></td>
    </tr>
    {% endfor %}

  </tbody>
</table>
{% endblock %}

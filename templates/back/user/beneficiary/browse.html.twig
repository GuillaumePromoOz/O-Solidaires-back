{% extends 'base.html.twig' %}

{% block title %}Bénéficiaires{% endblock %}

{% block body %}

<h1>Liste des bénéficiaires</h1>

<p><a href="{{ path('beneficiary_add') }}" class="btn btn-success">Ajouter un bénéficiaire</a></p>

<table class="table table-striped">
    {# En-têtes #}
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>

    {# Beneficiaries #}
    {% for beneficiary in beneficiaries %}
    <tr>
      <th scope="row">{{ beneficiary.id }}</th>
      <td>{{ beneficiary.lastname }}</td>
      <td>{{ beneficiary.firstname }}</td>
      <td><form action="{{ path('beneficiary_delete', {id: beneficiary.id}) }}" onsubmit="return confirm('Supprimer l\'utilisateur #{{ beneficiary.id }} ?')" method="POST">
        {# Fake HTTP Method, see https://symfony.com/doc/current/routing.html#matching-http-methods #}
        <input type="hidden" name="_method" value="DELETE"/>
        {# CSRF Token manuel see https://symfony.com/doc/current/security/csrf.html#generating-and-checking-csrf-tokens-manually #}
        <input type="hidden" name="token" value="{{ csrf_token('delete-beneficiary') }}"/>
        <a class="btn btn-sm btn-primary" href="{{ path('beneficiary_edit', {id: beneficiary.id}) }}">Modifier</a>
        <button class="btn btn-sm btn-danger" type="submit">Supprimer</button>
      </form></td>
    </tr>
    {% endfor %}

  </tbody>
</table>
{% endblock %}

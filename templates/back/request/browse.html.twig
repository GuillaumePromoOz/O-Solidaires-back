{% extends 'base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
<h1>Liste des demandes</h1>
<a class="btn btn-sm btn-success" href="{{ path('back_request_add') }}">Ajouter une demande</a>
<table class="table table-hover table-striped">
  
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Catégorie</th>
      <th scope="col">Titre</th>
      <th scope="col">Contenu</th>
      <th scope="col">Intervention</th>
      <th scope="col">Bénévole</th>
      <th scope="col">Département</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
     
    {% for request in requests %}        
    <tr>
      <th scope="row">{{ request.id }}</th>
      <td>{{ request.category }}</td>
      <td><a href="{{ path('back_request_read', {id: request.id}) }}">{{ request.title }}</a></td>
      <td>{{ request.content }}</td>
      <td>{{ request.interventionDate|date('m/d/Y')}}</td>
      <td><a href="#">{{ request.user.lastname }} {{ request.user.firstname }}</a></td>
      <td>{{ request.user.department }}</td>
      <td>
          <a class="btn btn-sm btn-primary" href="{{ path('back_request_edit', {id: request.id}) }}">Modifier</a>

          <form action="{{ path('back_request_delete', {id:request.id}) }}" onsubmit="return confirm('Voulez-vous supprimez : {{ request.title|e('js') }} ?')" method="POST">
            <button class="btn btn-sm btn-danger" type="submit" >Supprimer</button>
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="hidden" name="token" value="{{ csrf_token('delete-request') }}"/>
          </form>
      </td>
    </tr>
    {% endfor %}

  </tbody>
</table>
  
  
{% endblock %}

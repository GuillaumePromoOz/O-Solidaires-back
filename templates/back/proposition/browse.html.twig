{% extends 'base.html.twig' %}

{% block title %}Proposition{% endblock %}

{% block body %}
<h1>Liste des Propositions</h1>
<a class="btn btn-sm btn-success" href="{{ path('back_proposition_add') }}">Ajouter une proposition</a>
<table class="table table-hover table-striped">
  
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Catégorie</th>
      <th scope="col">Titre</th>
      <th scope="col">Contenu</th>
      <th scope="col">Disponibilité</th>
      <th scope="col">Bénévole</th>
      <th scope="col">Département</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
     
    {% for proposition in propositions %}        
    <tr>
      <th scope="row">{{ proposition.id }}</th>
      <td>{{ proposition.category }}</td>
      <td><a href="{{ path('back_proposition_read', {id: proposition.id}) }}">{{ proposition.title }}</a></td>
      <td>{{ proposition.content }}</td>
      <td>{{ proposition.disponibilityDate|date('m/d/Y')}}</td>
      <td><a href="#">{{ proposition.user.lastname }} {{ proposition.user.firstname }}</a></td>
      <td>{{ proposition.user.department }}</td>
      <td>
          <a class="btn btn-sm btn-primary" href="{{ path('back_proposition_edit', {id: proposition.id}) }}">Modifier</a>

          <form action="{{ path('back_proposition_delete', {id:proposition.id}) }}" onsubmit="return confirm('Voulez-vous supprimez : {{ proposition.title|e('js') }} ?')" method="POST">
            <button class="btn btn-sm btn-danger" type="submit" >Supprimer</button>
            <input type="hidden" name="_method" value="DELETE"/>
            <input type="hidden" name="token" value="{{ csrf_token('delete-proposition') }}"/>
          </form>
      </td>
    </tr>
    {% endfor %}

  </tbody>
</table>
  
  
{% endblock %}
